<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:padding="20dp"
    android:background="@drawable/background_2t">
    <TextView
        android:text="JOKENPO!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="10dp"
        android:text="SCORE"
        android:textColor="#ff0000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:rowCount="3"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:fontFamily="sans-serif-condensed"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:fontFamily="sans-serif-condensed"
            android:text="Computer"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_computer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:layout_row="2"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_player_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:layout_row="2"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/img_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paper1" />
        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:text="VS"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/img_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paper2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="What's your move?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="10sp">
        <Button
            android:id="@+id/btn_rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:background="@drawable/rock" />
        <Button
            android:id="@+id/btn_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/paper" />
        <Button
            android:id="@+id/btn_scissors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:background="@drawable/scissors" />
    </LinearLayout>
</LinearLayout>
